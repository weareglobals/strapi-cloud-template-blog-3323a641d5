{
  "kind": "collectionType",
  "collectionName": "success_cases",
  "info": {
    "singularName": "success-case",
    "pluralName": "success-cases",
    "displayName": "Success Cases",
    "description": "Cases de sucesso"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "client": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "challenge": {
      "type": "richtext",
      "required": true
    },
    "solution": {
      "type": "richtext",
      "required": true
    },
    "results": {
      "type": "richtext",
      "required": true
    },
    "testimonial": {
      "type": "text"
    },
    "testimonialAuthor": {
      "type": "string"
    },
    "testimonialRole": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "string",
      "required": true
    },
    "language": {
      "type": "enumeration",
      "enum": ["portuguese", "english", "spanish"],
      "required": true,
      "default": "portuguese"
    }
  }
} 