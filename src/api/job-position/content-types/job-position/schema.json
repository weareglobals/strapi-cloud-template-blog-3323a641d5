    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "department": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "string",
      "required": true
    },
    "salary": {
      "type": "string"
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "responsibilities": {
      "type": "richtext",
      "required": true
    },
    "requirements": {
      "type": "richtext",
      "required": true
    },
    "benefits": {
      "type": "richtext",
      "required": true
    },
    "isActive": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "applicationEmail": {
      "type": "email",
      "required": true
    }
